<div class="max-w-3xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold mb-2">Manage Your Subscription</h1>
    <p class="text-gray-600 dark:text-gray-400">
      View and manage your ChurchNeeds.net donation subscription.
    </p>
  </div>

  <!-- Subscription Details -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8 mb-6">
    <div class="flex items-start justify-between mb-6">
      <div>
        <h2 class="text-2xl font-semibold mb-2">Current Subscription</h2>
        <div class="flex items-center gap-2">
          <span class="px-3 py-1 rounded-full text-sm font-medium <%= @subscription.active? ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200' %>">
            <%= @subscription.status.titleize %>
          </span>
          <% if @subscription.cancel_at_period_end? %>
            <span class="px-3 py-1 rounded-full text-sm font-medium bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-200">
              Canceling
            </span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Subscription Info -->
    <div class="grid md:grid-cols-2 gap-6 mb-8">
      <div>
        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Amount</h3>
        <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @subscription.display_amount %></p>
        <p class="text-sm text-gray-600 dark:text-gray-400">per <%= @subscription.interval %></p>
      </div>
      
      <div>
        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Next Billing Date</h3>
        <p class="text-lg font-semibold text-gray-900 dark:text-white">
          <%= @subscription.next_billing_date&.strftime("%B %d, %Y") || "N/A" %>
        </p>
      </div>
    </div>

    <% if @subscription.cancel_at_period_end? %>
      <!-- Canceled Notice -->
      <div class="bg-orange-50 dark:bg-orange-900/20 border border-orange-200 dark:border-orange-800 rounded-lg p-4 mb-6">
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-orange-600 dark:text-orange-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
          <div>
            <h4 class="font-semibold text-gray-900 dark:text-white mb-1">Subscription Scheduled for Cancellation</h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Your subscription will end on <%= @subscription.next_billing_date&.strftime("%B %d, %Y") %>. 
              You can reactivate it at any time before then.
            </p>
          </div>
        </div>
      </div>

      <!-- Reactivate Button -->
      <div class="mb-6">
        <%= button_to "Reactivate Subscription", reactivate_donations_path, method: :post, class: "w-full px-6 py-3 bg-green-600 text-white rounded-lg font-semibold hover:bg-green-700 transition" %>
      </div>
    <% else %>
      <!-- Update Amount Form -->
      <div class="border-t border-gray-200 dark:border-gray-700 pt-6 mb-6">
        <h3 class="text-lg font-semibold mb-4">Update Donation Amount</h3>
        <%= form_with url: update_amount_donations_path, method: :patch, class: "space-y-4" do |f| %>
          <div class="flex gap-4">
            <div class="flex-1">
              <label for="amount" class="block text-sm font-medium mb-2">New Amount</label>
              <div class="relative">
                <span class="absolute left-4 top-3 text-gray-500">$</span>
                <input type="number" 
                       name="amount" 
                       id="amount" 
                       value="<%= @subscription.amount_in_dollars %>" 
                       min="1" 
                       step="0.01"
                       class="pl-8 w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-sky-500 focus:border-transparent"
                       required>
              </div>
            </div>
            <div class="flex items-end">
              <button type="submit" class="px-6 py-2 bg-sky-600 text-white rounded-lg font-semibold hover:bg-sky-700 transition">
                Update Amount
              </button>
            </div>
          </div>
          <p class="text-sm text-gray-500 dark:text-gray-400">
            Changes will take effect on your next billing date.
          </p>
        <% end %>
      </div>

      <!-- Cancel Subscription -->
      <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
        <h3 class="text-lg font-semibold mb-2">Cancel Subscription</h3>
        <p class="text-gray-600 dark:text-gray-400 mb-4">
          You can cancel your subscription at any time. You'll continue to have access until the end of your current billing period.
        </p>
        <%= button_to "Cancel Subscription", cancel_donations_path, method: :post, 
            data: { confirm: "Are you sure you want to cancel your subscription? You can reactivate it anytime before the end of your billing period." },
            class: "px-6 py-2 bg-red-600 text-white rounded-lg font-semibold hover:bg-red-700 transition" %>
      </div>
    <% end %>
  </div>

  <!-- Help Section -->
  <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-6">
    <h3 class="text-lg font-semibold mb-3">Need Help?</h3>
    <p class="text-gray-600 dark:text-gray-400 mb-4">
      If you have any questions about your subscription or billing, please contact us.
    </p>
    <a href="mailto:support@roaringlambproductions.com" class="inline-flex items-center gap-2 text-sky-600 dark:text-sky-400 hover:text-sky-700 dark:hover:text-sky-300 font-medium">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
      </svg>
      support@roaringlambproductions.com
    </a>
  </div>
</div>

<div class="max-w-3xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold mb-4">Support ChurchNeeds.net</h1>
    <p class="text-gray-600 dark:text-gray-400">
      ChurchNeeds.net is free and open-source. Your donation helps us maintain the hosted service, 
      develop new features, and keep this tool available for churches everywhere.
    </p>
  </div>

  <% if @subscription && @subscription.persisted? %>
    <!-- Existing Subscription -->
    <div class="bg-sky-50 dark:bg-sky-900/20 border border-sky-200 dark:border-sky-800 rounded-lg p-6 mb-8">
      <div class="flex items-start gap-3">
        <svg class="w-6 h-6 text-sky-600 dark:text-sky-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white">You have an active subscription</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            You're currently supporting ChurchNeeds.net with <%= @subscription.display_amount %> <%= @subscription.display_interval %>.
            <%= "Your subscription will be canceled at the end of the billing period." if @subscription.cancel_at_period_end? %>
          </p>
          <%= link_to "Manage Subscription", manage_donations_path, class: "inline-flex items-center px-4 py-2 bg-sky-600 text-white rounded-lg font-semibold hover:bg-sky-700 transition" %>
        </div>
      </div>
    </div>
  <% else %>
    <!-- New Donation Form -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8 mb-8">
      <h2 class="text-2xl font-semibold mb-6">Set Up Your Donation</h2>
      
      <%= form_with url: donations_path, method: :post, class: "space-y-6", data: { turbo: false } do |f| %>
        <!-- Amount Selection -->
        <div>
          <label class="block text-sm font-medium mb-3">Choose your donation amount</label>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4">
            <% [10, 25, 50, 100].each do |amount| %>
              <button type="button" 
                      class="amount-btn px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-lg font-semibold hover:border-sky-500 dark:hover:border-sky-400 transition <%= amount == 25 ? 'bg-sky-50 dark:bg-sky-900/20 border-sky-500 dark:border-sky-400' : '' %>"
                      data-amount="<%= amount %>">
                $<%= amount %>
              </button>
            <% end %>
          </div>
          
          <!-- Custom Amount -->
          <div>
            <label for="amount" class="block text-sm font-medium mb-2">Or enter a custom amount</label>
            <div class="relative">
              <span class="absolute left-4 top-3 text-gray-500">$</span>
              <input type="number" 
                     name="amount" 
                     id="amount" 
                     value="<%= @default_amount %>" 
                     min="1" 
                     step="0.01"
                     class="pl-8 w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-sky-500 focus:border-transparent"
                     required>
            </div>
          </div>
        </div>

        <!-- Billing Frequency -->
        <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-sky-600 dark:text-sky-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <div>
              <p class="font-medium">Billed yearly</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">You can cancel or adjust the amount at any time</p>
            </div>
          </div>
        </div>

        <!-- Statement Descriptor Info -->
        <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-gray-600 dark:text-gray-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
            </svg>
            <div>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                Your statement will show <strong class="text-gray-900 dark:text-white">ChurchNeeds.net</strong> 
                (processed through Roaring Lamb Productions)
              </p>
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
          <button type="submit" class="w-full px-6 py-3 bg-sky-600 text-white rounded-lg font-semibold text-lg hover:bg-sky-700 transition shadow-lg">
            Continue to Payment
          </button>
        </div>

        <p class="text-sm text-gray-500 dark:text-gray-400 text-center">
          You'll be redirected to a secure Stripe checkout page
        </p>
      <% end %>
    </div>

    <!-- Benefits Section -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold mb-4">How Your Donation Helps</h3>
      <ul class="space-y-3">
        <li class="flex items-start gap-3">
          <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="text-gray-600 dark:text-gray-400">Covers hosting costs for the platform</span>
        </li>
        <li class="flex items-start gap-3">
          <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="text-gray-600 dark:text-gray-400">Funds ongoing development and new features</span>
        </li>
        <li class="flex items-start gap-3">
          <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="text-gray-600 dark:text-gray-400">Keeps the service free for all churches</span>
        </li>
        <li class="flex items-start gap-3">
          <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="text-gray-600 dark:text-gray-400">Supports the open-source community</span>
        </li>
      </ul>
    </div>
  <% end %>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const amountButtons = document.querySelectorAll('.amount-btn');
    const amountInput = document.getElementById('amount');
    
    amountButtons.forEach(button => {
      button.addEventListener('click', function() {
        // Remove active class from all buttons
        amountButtons.forEach(btn => {
          btn.classList.remove('bg-sky-50', 'dark:bg-sky-900/20', 'border-sky-500', 'dark:border-sky-400');
          btn.classList.add('border-gray-300', 'dark:border-gray-600');
        });
        
        // Add active class to clicked button
        this.classList.remove('border-gray-300', 'dark:border-gray-600');
        this.classList.add('bg-sky-50', 'dark:bg-sky-900/20', 'border-sky-500', 'dark:border-sky-400');
        
        // Update amount input
        const amount = this.dataset.amount;
        amountInput.value = amount;
      });
    });
    
    // When user types in custom amount, deselect all preset buttons
    amountInput.addEventListener('input', function() {
      amountButtons.forEach(btn => {
        btn.classList.remove('bg-sky-50', 'dark:bg-sky-900/20', 'border-sky-500', 'dark:border-sky-400');
        btn.classList.add('border-gray-300', 'dark:border-gray-600');
      });
    });
  });
</script>

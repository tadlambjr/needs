<div class="mb-8">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-3xl font-bold mb-2">All Needs</h1>
      <p class="text-gray-600 dark:text-gray-400">Browse and sign up for needs in our community</p>
    </div>
    <%= link_to "+ Create Need or Event", new_need_path, class: "px-4 py-2 bg-sky-600 text-white rounded-md font-medium hover:bg-sky-700" %>
  </div>

  <!-- Filters and Search -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 mb-6">
    <%= form_with url: needs_path, method: :get, class: "space-y-4" do |f| %>
      <div class="grid gap-4 md:grid-cols-4">
        <div>
          <%= f.text_field :query, placeholder: "Search needs...", value: params[:query], class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700" %>
        </div>
        <div>
          <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name, params[:category_id]), { include_blank: "All Categories" }, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700" %>
        </div>
        <div>
          <%= f.date_field :start_date, value: params[:start_date], placeholder: "Start Date", class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700" %>
        </div>
        <div class="flex items-center">
          <%= f.check_box :with_openings, { class: "mr-2" }, "1", "0" %>
          <%= f.label :with_openings, "Show only needs with openings", class: "text-sm" %>
        </div>
      </div>
      <div class="flex gap-2">
        <%= f.submit "Filter", class: "px-4 py-2 bg-sky-600 text-white rounded-md font-medium hover:bg-sky-700 cursor-pointer" %>
        <%= link_to "Clear Filters", needs_path, class: "px-4 py-2 bg-gray-200 dark:bg-gray-700 rounded-md font-medium hover:bg-gray-300 dark:hover:bg-gray-600" %>
      </div>
    <% end %>
  </div>

  <!-- Category Quick Filters -->
  <div class="mb-6 flex flex-wrap gap-2">
    <%= link_to "All", needs_path, class: "px-4 py-2 rounded-full #{params[:category_id].blank? ? 'bg-sky-600 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200'} text-sm font-medium hover:bg-sky-500" %>
    <% @categories.each do |category| %>
      <%= link_to category.name, needs_path(category_id: category.id), class: "px-4 py-2 rounded-full #{params[:category_id].to_i == category.id ? 'text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200'} text-sm font-medium hover:opacity-80", style: params[:category_id].to_i == category.id ? "background-color: #{category.color}" : "" %>
    <% end %>
  </div>

  <!-- Needs Grid -->
  <% if @needs.any? %>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @needs.each do |need| %>
        <%= render "need_card", need: need %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-12 text-center">
      <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
      </svg>
      <h3 class="text-xl font-semibold mb-2">No needs found</h3>
      <p class="text-gray-600 dark:text-gray-400 mb-4">Try adjusting your filters or check back later.</p>
      <%= link_to "Clear Filters", needs_path, class: "text-sky-600 hover:text-sky-800 font-medium" %>
    </div>
  <% end %>
</div>

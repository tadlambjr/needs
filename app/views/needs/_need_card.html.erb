<div class="bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-lg transition-shadow p-6">
  <div class="flex items-start justify-between mb-3">
    <div class="flex-1">
      <h3 class="text-xl font-semibold mb-2">
        <%= link_to need.title, need_path(need), class: "hover:text-indigo-600 dark:hover:text-indigo-400" %>
      </h3>
    </div>
  </div>

  <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-2">
    <%= need.description %>
  </p>

  <div class="space-y-2 text-sm text-gray-600 dark:text-gray-400 mb-4">
    <div class="flex items-center">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      <span>
        <%= format_date(need.start_date) %>
        <% if need.start_date != need.end_date %>
          - <%= format_date(need.end_date) %>
        <% end %>
      </span>
    </div>

    <% if need.time_slot.present? %>
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span><%= time_slot_label(need.time_slot) %></span>
      </div>
    <% end %>

    <% if need.location.present? %>
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span><%= need.location %></span>
      </div>
    <% end %>
  </div>

  <div class="flex items-center justify-between pt-4 border-t border-gray-200 dark:border-gray-700">
    <div class="text-sm">
      <span class="font-medium"><%= need.active_signups.count %></span>
      <span class="text-gray-600 dark:text-gray-400">/ <%= need.volunteer_capacity %> volunteers</span>
    </div>

    <%= link_to "View Details", need_path(need), class: "px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700" %>
  </div>

  <% if need.allow_individual_day_signup? %>
    <div class="mt-3 pt-3 border-t border-gray-200 dark:border-gray-700">
      <p class="text-xs text-gray-500 dark:text-gray-400 flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
        Sign up for individual days
      </p>
    </div>
  <% end %>
</div>

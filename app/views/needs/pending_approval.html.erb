<% content_for :title, "Pending Approvals" %>

<div class="max-w-7xl mx-auto">
  <div class="mb-6">
    <h1 class="text-3xl font-bold mb-2">Pending Approvals</h1>
    <p class="text-gray-600 dark:text-gray-400">Review and approve member-submitted needs and room bookings</p>
  </div>
  
  <!-- Room Booking Approvals -->
  <% if @pending_room_bookings.any? %>
    <div class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Room Booking Requests</h2>
      <div class="space-y-4">
        <% @pending_room_bookings.each do |need| %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
            <div class="flex items-start justify-between mb-3">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <span class="px-3 py-1 text-xs font-medium rounded-full" style="background-color: <%= need.category.color %>20; color: <%= need.category.color %>">
                    <%= need.category.name %>
                  </span>
                  <span class="px-2 py-1 text-xs rounded bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200">
                    Room Booking Pending
                  </span>
                </div>
                <h3 class="text-xl font-semibold mb-2">
                  <%= link_to need.title, need_path(need), class: "hover:text-teal-600 dark:hover:text-teal-400" %>
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                  <%= need.event? ? "Event" : "Need" %> by <strong><%= need.creator.name %></strong>
                </p>
                <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                  <%= format_date(need.start_date) %>
                  <% if need.start_date != need.end_date %>
                    - <%= format_date(need.end_date) %>
                  <% end %>
                </p>
              </div>
            </div>
            
            <!-- Room Booking Details -->
            <div class="mt-4 border-t border-gray-200 dark:border-gray-700 pt-4">
              <h4 class="font-semibold mb-3">Requested Rooms:</h4>
              <div class="space-y-3">
                <% need.room_bookings.pending_approval.each do |booking| %>
                  <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-900 rounded-md">
                    <div class="flex-1">
                      <div class="font-medium"><%= booking.room.name %></div>
                      <div class="text-sm text-gray-600 dark:text-gray-400">
                        <%= booking.room.location if booking.room.location.present? %>
                        <%= " â€¢ Capacity: #{booking.room.capacity}" if booking.room.capacity.present? %>
                      </div>
                      <% if booking.notes.present? %>
                        <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                          <strong>Notes:</strong> <%= booking.notes %>
                        </div>
                      <% end %>
                      <div class="text-xs text-gray-500 dark:text-gray-500 mt-1">
                        Requested by <%= booking.requested_by.name %>
                      </div>
                    </div>
                    <div class="flex gap-2 ml-4">
                      <%= button_to "Approve", approve_room_booking_path(booking), method: :patch,
                          class: "px-3 py-1 bg-green-600 text-white text-xs font-medium rounded hover:bg-green-700" %>
                      <%= button_to "Reject", reject_room_booking_path(booking), method: :patch,
                          class: "px-3 py-1 bg-red-600 text-white text-xs font-medium rounded hover:bg-red-700" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @needs.any? %>
    <div class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Need/Event Approvals</h2>
      <div class="space-y-4">
      <% @needs.each do |need| %>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
          <div class="flex items-start justify-between mb-3">
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-2">
                <span class="px-3 py-1 text-xs font-medium rounded-full" style="background-color: <%= need.category.color %>20; color: <%= need.category.color %>">
                  <%= need.category.name %>
                </span>
                <span class="px-2 py-1 text-xs rounded bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200">
                  Pending Approval
                </span>
              </div>
              <h3 class="text-xl font-semibold mb-2">
                <%= link_to need.title, need_path(need), class: "hover:text-teal-600 dark:hover:text-teal-400" %>
              </h3>
              <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                Submitted by <strong><%= need.creator.name %></strong> on <%= need.created_at.strftime("%B %d, %Y") %>
              </p>
            </div>
          </div>

          <% if need.description.present? %>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
              <%= need.description %>
            </p>
          <% end %>

          <div class="space-y-2 text-sm text-gray-600 dark:text-gray-400 mb-4">
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span>
                <%= format_date(need.start_date) %>
                <% if need.start_date != need.end_date %>
                  - <%= format_date(need.end_date) %>
                <% end %>
              </span>
            </div>

            <% if need.time_slot.present? %>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span><%= time_slot_label(need.time_slot, need.specific_time) %></span>
              </div>
            <% end %>

            <% if need.location.present? %>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span><%= need.location %></span>
              </div>
            <% end %>

            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
              <span><%= need.volunteer_capacity %> volunteers needed</span>
            </div>
          </div>

          <div class="flex items-center gap-3 pt-4 border-t border-gray-200 dark:border-gray-700">
            <%= link_to "View Details", need_path(need), class: "px-4 py-2 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-sm font-medium rounded-md hover:bg-gray-200 dark:hover:bg-gray-600" %>
            
            <%= button_to "Approve", approve_need_path(need), method: :patch, 
                data: { turbo_confirm: "Are you sure you want to approve this need?" },
                class: "px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700" %>
            
            <%= button_to "Reject", reject_need_path(need), method: :patch,
                data: { turbo_confirm: "Are you sure you want to reject this need?" },
                class: "px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700" %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  <% end %>
  
  <% if @needs.empty? && @pending_room_bookings.empty? %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-12 text-center">
      <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <h3 class="text-xl font-semibold mb-2">No Pending Approvals</h3>
      <p class="text-gray-600 dark:text-gray-400">All member-submitted needs and room bookings have been reviewed.</p>
    </div>
  <% end %>
</div>

<div class="max-w-4xl mx-auto">
  <!-- Back Link -->
  <%= link_to needs_path, class: "inline-flex items-center text-indigo-600 hover:text-indigo-800 mb-6" do %>
    <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
    </svg>
    Back to All Needs
  <% end %>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
    <!-- Header -->
    <div class="p-8 border-b border-gray-200 dark:border-gray-700">
      <div class="flex items-start justify-between mb-4">
        <div class="flex-1">
          <h1 class="text-3xl font-bold mb-2"><%= @need.title %></h1>
        </div>
        
        <% if Current.user.admin? || (@need.creator == Current.user && @need.draft?) %>
          <div class="flex gap-2">
            <%= link_to "Edit", edit_need_path(@need), class: "px-4 py-2 bg-gray-200 dark:bg-gray-700 rounded-md text-sm font-medium hover:bg-gray-300 dark:hover:bg-gray-600" %>
          </div>
        <% end %>
      </div>

      <% if @need.description.present? %>
        <div class="prose dark:prose-invert max-w-none">
          <p class="text-lg"><%= @need.description %></p>
        </div>
      <% end %>
    </div>

    <!-- Details -->
    <div class="p-8 grid md:grid-cols-2 gap-6 border-b border-gray-200 dark:border-gray-700">
      <div class="space-y-4">
        <div class="flex items-start">
          <svg class="w-5 h-5 mr-3 mt-1 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <div>
            <p class="font-semibold">Date</p>
            <p class="text-gray-600 dark:text-gray-400">
              <%= format_date(@need.start_date) %>
              <% if @need.start_date != @need.end_date %>
                - <%= format_date(@need.end_date) %>
              <% end %>
            </p>
          </div>
        </div>

        <% if @need.time_slot.present? %>
          <div class="flex items-start">
            <svg class="w-5 h-5 mr-3 mt-1 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <p class="font-semibold">Time</p>
              <p class="text-gray-600 dark:text-gray-400"><%= time_slot_label(@need.time_slot, @need.specific_time) %></p>
            </div>
          </div>
        <% end %>
      </div>

      <div class="space-y-4">
        <% if @need.location.present? %>
          <div class="flex items-start">
            <svg class="w-5 h-5 mr-3 mt-1 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <div>
              <p class="font-semibold">Location</p>
              <p class="text-gray-600 dark:text-gray-400"><%= @need.location %></p>
            </div>
          </div>
        <% end %>

        <div class="flex items-start">
          <svg class="w-5 h-5 mr-3 mt-1 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
          <div>
            <p class="font-semibold">Volunteers Needed</p>
            <p class="text-gray-600 dark:text-gray-400">
              <span class="font-bold text-indigo-600"><%= @need.active_signups.count %></span> / <%= @need.volunteer_capacity %>
              <% if @need.full? %>
                <span class="ml-2 px-2 py-1 text-xs bg-yellow-100 text-yellow-800 rounded">Full</span>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Meal Train Calendar -->
    <% if @need.allow_individual_day_signup? %>
      <div class="p-8 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-xl font-semibold mb-4">Sign Up for Specific Days</h2>
        <div class="grid grid-cols-7 gap-2">
          <% @need.days_array.each do |date| %>
            <div class="border border-gray-200 dark:border-gray-700 rounded p-3 <%= @need.available_for_date?(date) ? 'hover:border-indigo-500 cursor-pointer' : 'bg-gray-100 dark:bg-gray-700' %>">
              <p class="text-sm font-semibold"><%= date.strftime('%b %d') %></p>
              <p class="text-xs text-gray-600 dark:text-gray-400"><%= date.strftime('%A') %></p>
              <% if @need.available_for_date?(date) %>
                <% if authenticated? %>
                  <%= button_to "Sign Up", signup_need_path(@need, specific_date: date), method: :post, class: "mt-2 w-full px-2 py-1 bg-indigo-600 text-white text-xs rounded hover:bg-indigo-700" %>
                <% end %>
              <% else %>
                <p class="mt-2 text-xs text-red-600">Filled</p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Signup Section -->
    <% if @need.published? && authenticated? %>
      <div class="p-8 bg-gray-50 dark:bg-gray-900 border-b border-gray-200 dark:border-gray-700">
        <% if @user_signup %>
          <div class="<%= @user_signup.completed? ? 'bg-blue-50 dark:bg-blue-900 border-blue-200 dark:border-blue-700' : 'bg-green-50 dark:bg-green-900 border-green-200 dark:border-green-700' %> border rounded-lg p-6">
            <div class="flex items-start justify-between gap-4">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-1">
                  <h3 class="font-semibold <%= @user_signup.completed? ? 'text-blue-800 dark:text-blue-200' : 'text-green-800 dark:text-green-200' %>">
                    <% if @user_signup.completed? %>
                      ✓ Completed!
                    <% else %>
                      You're signed up!
                    <% end %>
                  </h3>
                </div>
                <p class="text-sm <%= @user_signup.completed? ? 'text-blue-700 dark:text-blue-300' : 'text-green-700 dark:text-green-300' %>">
                  <% if @user_signup.completed? %>
                    Completed on <%= format_datetime(@user_signup.completed_at) %>
                  <% else %>
                    Signed up on <%= format_datetime(@user_signup.signed_up_at) %>
                  <% end %>
                </p>
              </div>
              <div class="flex gap-2">
                <% if @need.checklist && !@user_signup.completed? %>
                  <%= link_to "View Checklist", checklist_need_signup_path(@user_signup), 
                      class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 font-medium" %>
                <% end %>
                <% if @user_signup.can_cancel? %>
                  <%= button_to "Cancel", cancel_signup_need_path(@need), method: :delete, 
                      data: { confirm: "Are you sure you want to cancel your signup?" },
                      class: "px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700" %>
                <% end %>
              </div>
            </div>
          </div>
        <% elsif @can_signup %>
          <% unless @need.allow_individual_day_signup? %>
            <%= button_to "Sign Up to Volunteer", signup_need_path(@need), method: :post,
                class: "w-full md:w-auto px-6 py-3 bg-indigo-600 text-white text-lg font-semibold rounded-md hover:bg-indigo-700" %>
          <% end %>
        <% elsif @need.full? %>
          <p class="text-yellow-600 dark:text-yellow-400 font-medium">This need is currently full.</p>
        <% end %>
      </div>
    <% end %>

    <!-- Volunteers List -->
    <% if @signups.any? %>
      <div class="p-8">
        <h2 class="text-xl font-semibold mb-4">Volunteers (<%= @signups.count %>)</h2>
        <div class="space-y-3">
          <% @signups.each do |signup| %>
            <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-900 rounded-lg">
              <div>
                <p class="font-semibold"><%= signup.user.name %></p>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  Signed up <%= time_ago_in_words(signup.signed_up_at) %> ago
                  <% if signup.specific_date %>
                    • <%= format_date(signup.specific_date) %>
                  <% end %>
                </p>
              </div>
              <div class="flex items-center gap-2">
                <% if signup.completed? %>
                  <span class="flex items-center gap-1 px-3 py-1 text-sm rounded bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Completed
                  </span>
                <% else %>
                  <span class="px-3 py-1 text-sm rounded <%= status_badge_class(signup.status) %>">
                    <%= signup.status.titleize %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Recurring Instances -->
    <% if @need.is_recurring? && @need.child_needs.any? %>
      <div class="p-8 border-t border-gray-200 dark:border-gray-700">
        <h2 class="text-xl font-semibold mb-4">Weekly Occurrences</h2>
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
          This need repeats every <%= @need.recurrence_pattern&.titleize %>. 
          <%= @need.recurrence_end_date ? "Until #{format_date(@need.recurrence_end_date)}" : "Ongoing" %>
        </p>
        
        <% @need.recurring_instances_grouped_by_month.each do |month, instances| %>
          <div class="mb-6">
            <h3 class="font-semibold text-lg mb-3"><%= month.strftime('%B %Y') %></h3>
            <div class="grid gap-3 md:grid-cols-2 lg:grid-cols-3">
              <% instances.each do |instance| %>
                <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 <%= instance.full? ? 'bg-gray-100 dark:bg-gray-800' : 'hover:border-indigo-400 dark:hover:border-indigo-500' %>">
                  <div class="flex justify-between items-start mb-2">
                    <span class="font-medium"><%= instance.start_date.strftime('%b %d') %></span>
                    <% if instance.full? %>
                      <span class="px-2 py-1 text-xs bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200 rounded">Full</span>
                    <% elsif instance.active_signups.any? %>
                      <span class="px-2 py-1 text-xs bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 rounded">
                        <%= instance.active_signups.count %> / <%= instance.volunteer_capacity %>
                      </span>
                    <% else %>
                      <span class="px-2 py-1 text-xs bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400 rounded">
                        Available
                      </span>
                    <% end %>
                  </div>
                  
                  <% if instance.active_signups.any? %>
                    <div class="text-xs text-gray-600 dark:text-gray-400 mb-2">
                      <%= instance.active_signups.map { |s| s.user.name }.join(', ') %>
                    </div>
                  <% end %>
                  
                  <% if authenticated? && !instance.full? %>
                    <% user_signed_up = instance.active_signups.any? { |s| s.user_id == Current.user.id } %>
                    <% if user_signed_up %>
                      <span class="text-xs text-green-600 dark:text-green-400 font-medium">✓ You're signed up</span>
                    <% else %>
                      <%= button_to "Sign Up", signup_need_path(instance), method: :post, 
                          class: "mt-2 w-full px-3 py-2 bg-indigo-600 text-white text-sm rounded hover:bg-indigo-700" %>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Admin Actions -->
    <% if Current.user.admin? && @need.member_initiated? && @need.draft? %>
      <div class="p-8 bg-yellow-50 dark:bg-yellow-900 border-t border-gray-200 dark:border-gray-700">
        <h2 class="text-xl font-semibold mb-4">Admin Actions</h2>
        <div class="flex gap-4">
          <%= button_to "Approve & Publish", approve_need_path(@need), method: :patch,
              class: "px-6 py-3 bg-green-600 text-white rounded-md hover:bg-green-700" %>
          <%= button_to "Reject", reject_need_path(@need), method: :patch,
              data: { confirm: "Are you sure you want to reject this need?" },
              class: "px-6 py-3 bg-red-600 text-white rounded-md hover:bg-red-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

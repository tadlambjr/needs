<div class="max-w-2xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold mb-2">Contact Support</h1>
    <p class="text-gray-600 dark:text-gray-400">
      Have a question or need help? Send us a message and we'll get back to you as soon as possible.
    </p>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
    <%= form_with url: contact_path, method: :post, class: "space-y-6" do |f| %>
      <%= hidden_field_tag :form_loaded_at, @form_loaded_at %>

      <!-- Name Field -->
      <div>
        <label for="name" class="block text-sm font-medium mb-2">
          Name <span class="text-red-600">*</span>
        </label>
        <input type="text"
               name="name"
               id="name"
               value="<%= params[:name] %>"
               class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-sky-500 focus:border-transparent"
               required>
      </div>

      <!-- Email Field -->
      <div>
        <label for="email" class="block text-sm font-medium mb-2">
          Email <span class="text-red-600">*</span>
        </label>
        <input type="email"
               name="email"
               id="email"
               value="<%= params[:email] %>"
               class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-sky-500 focus:border-transparent"
               required>
      </div>

      <!-- Subject Field -->
      <div>
        <label for="subject" class="block text-sm font-medium mb-2">
          Subject
        </label>
        <input type="text"
               name="subject"
               id="subject"
               value="<%= params[:subject] %>"
               class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-sky-500 focus:border-transparent">
      </div>

      <!-- Message Field -->
      <div>
        <label for="message" class="block text-sm font-medium mb-2">
          Message <span class="text-red-600">*</span>
        </label>
        <textarea name="message"
                  id="message"
                  rows="6"
                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-sky-500 focus:border-transparent"
                  required><%= params[:message] %></textarea>
      </div>

      <!-- Honeypot field - hidden from real users, visible to bots -->
      <div style="position: absolute; left: -5000px;" aria-hidden="true">
        <label for="website">Website (leave blank)</label>
        <input type="text" name="website" id="website" value="" tabindex="-1" autocomplete="off">
      </div>

      <!-- Submit Button -->
      <div class="flex gap-4">
        <button type="submit" class="flex-1 px-6 py-3 bg-sky-600 text-white rounded-lg font-semibold hover:bg-sky-700 transition">
          Send Message
        </button>
        <%= link_to "Cancel", root_path, class: "px-6 py-3 bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg font-semibold hover:bg-gray-300 dark:hover:bg-gray-600 transition text-center" %>
      </div>
    <% end %>
  </div>

<% content_for :title, "Edit Profile" %>

<div class="max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold mb-6">Edit Profile</h1>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
    <%= form_with model: @user, url: profile_path, method: :patch, local: true do |f| %>
      <%= render "shared/form_errors", object: @user %>

      <div class="space-y-4">
        <div>
          <%= f.label :name, class: "block text-sm font-medium mb-1" %>
          <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700" %>
        </div>

        <div>
          <%= f.label :email_address, "Email", class: "block text-sm font-medium mb-1" %>
          <%= f.email_field :email_address, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700" %>
        </div>

        <div>
          <%= f.label :phone, class: "block text-sm font-medium mb-1" %>
          <%= f.telephone_field :phone, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700" %>
        </div>

        <div>
          <%= f.label :bio, class: "block text-sm font-medium mb-1" %>
          <%= f.text_area :bio, rows: 4, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700" %>
        </div>
      </div>

      <div class="mt-6 flex items-center justify-between">
        <%= link_to "Cancel", profile_path, class: "text-gray-600 dark:text-gray-400 hover:text-gray-800" %>
        <%= f.submit "Save Changes", class: "px-6 py-2 bg-teal-600 text-white rounded-md hover:bg-teal-700" %>
      </div>
    <% end %>
  </div>
</div>

<% content_for :title, "My Profile" %>

<div class="max-w-4xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold">My Profile</h1>
    <%= link_to "Edit Profile", edit_profile_path, class: "px-4 py-2 bg-sky-600 text-white rounded-md hover:bg-sky-700" %>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 mb-6">
    <div class="flex items-center space-x-4 mb-6">
      <div class="h-20 w-20 rounded-full bg-sky-600 flex items-center justify-center text-white text-2xl font-bold">
        <%= @user.name.first.upcase %>
      </div>
      <div>
        <h2 class="text-2xl font-bold"><%= @user.name %></h2>
        <p class="text-gray-600 dark:text-gray-400"><%= @user.email_address %></p>
        <% if @user.phone.present? %>
          <p class="text-gray-600 dark:text-gray-400"><%= @user.phone %></p>
        <% end %>
      </div>
    </div>

    <% if @user.bio.present? %>
      <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
        <h3 class="font-semibold mb-2">Bio</h3>
        <p class="text-gray-600 dark:text-gray-400"><%= @user.bio %></p>
      </div>
    <% end %>

    <div class="border-t border-gray-200 dark:border-gray-700 pt-4 mt-4">
      <dl class="grid grid-cols-2 gap-4">
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Role</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @user.role.titleize %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Member Since</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100"><%= @user.created_at.strftime("%B %Y") %></dd>
        </div>
      </dl>
    </div>
  </div>

  <div class="grid md:grid-cols-2 gap-6">
    <!-- Upcoming Signups -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <h2 class="text-xl font-bold mb-4">Upcoming Signups</h2>
      <% if @upcoming_signups.any? %>
        <div class="space-y-3">
          <% @upcoming_signups.each do |signup| %>
            <div class="border-l-4 border-sky-500 pl-3">
              <%= link_to signup.need.title, need_path(signup.need), class: "font-medium hover:text-sky-600" %>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                <%= format_date(signup.need.start_date) %>
              </p>
            </div>
          <% end %>
        </div>
        <%= link_to "View All", my_needs_needs_path, class: "mt-4 inline-block text-sm text-sky-600 dark:text-sky-400 hover:text-sky-800" %>
      <% else %>
        <p class="text-gray-500 dark:text-gray-400">No upcoming signups</p>
      <% end %>
    </div>

    <!-- Recent Activity -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <h2 class="text-xl font-bold mb-4">Recent Activity</h2>
      <% if @completed_signups.any? %>
        <div class="space-y-3">
          <% @completed_signups.each do |signup| %>
            <div class="border-l-4 border-green-500 pl-3">
              <%= link_to signup.need.title, need_path(signup.need), class: "font-medium hover:text-sky-600" %>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                Completed <%= time_ago_in_words(signup.completed_at || signup.need.end_date) %> ago
              </p>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 dark:text-gray-400">No completed signups yet</p>
      <% end %>
    </div>
  </div>
</div>

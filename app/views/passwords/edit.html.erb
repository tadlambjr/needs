<% content_for :hide_footer, true %>
<% content_for :container_class, '' %>

<div class="fixed inset-0 overflow-y-auto bg-gradient-to-br from-slate-500 to-yellow-200 dark:from-sky-900 dark:via-purple-900 dark:to-pink-900">
  <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
      <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-white dark:bg-gray-800 rounded-full shadow-lg mb-4">
          <svg class="w-10 h-10 text-sky-600 dark:text-sky-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
          </svg>
        </div>
        <h2 class="text-3xl font-bold text-white mb-2">Reset Your Password</h2>
        <p class="text-sky-100">Enter your new password below</p>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl p-8">
        <% if flash[:alert].present? %>
          <div class="mb-6 bg-red-50 dark:bg-red-900/30 border-l-4 border-red-400 p-4 rounded-r-lg">
            <p class="text-sm text-red-800 dark:text-red-200"><%= flash[:alert] %></p>
          </div>
        <% end %>

        <%= form_with url: password_path(params[:token]), method: :put, class: "space-y-6" do |form| %>
          <div>
            <%= form.label :password, "New Password", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
            <%= form.password_field :password, required: true, autofocus: true, autocomplete: "new-password", placeholder: "Enter new password", maxlength: 72, class: "block w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 dark:bg-gray-700 dark:text-white" %>
          </div>

          <div>
            <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
            <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Repeat new password", maxlength: 72, class: "block w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 dark:bg-gray-700 dark:text-white" %>
          </div>

          <div>
            <%= form.submit "Reset Password", class: "w-full py-3 px-4 bg-sky-600 hover:bg-sky-700 text-white rounded-lg font-medium cursor-pointer transition" %>
          </div>

          <div class="text-center">
            <%= link_to "Back to Sign In", new_session_path, class: "text-sm text-sky-600 hover:text-sky-500 dark:text-sky-400" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<nav class="bg-white dark:bg-gray-800 shadow-sm fixed top-0 left-0 right-0 z-[100]" data-controller="mobile-menu">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo/Brand -->
      <div class="flex items-center">
        <%= link_to root_path, class: "text-xl font-bold text-sky-600 dark:text-sky-400" do %>
          Church Needs
        <% end %>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-2 lg:space-x-4 flex-wrap gap-y-2">
        <%= link_to "Home", root_path, class: "px-3 py-2 rounded-md text-sm font-medium #{current_page?(root_path) ? 'bg-sky-100 dark:bg-sky-900 text-sky-700 dark:text-sky-300' : 'hover:bg-gray-100 dark:hover:bg-gray-700'}" %>
        <%= link_to "All Needs", needs_path, class: "px-3 py-2 rounded-md text-sm font-medium #{current_page?(needs_path) ? 'bg-sky-100 dark:bg-sky-900 text-sky-700 dark:text-sky-300' : 'hover:bg-gray-100 dark:hover:bg-gray-700'}" %>
        <%= link_to "Calendar", calendar_needs_path, class: "px-3 py-2 rounded-md text-sm font-medium #{current_page?(calendar_needs_path) ? 'bg-sky-100 dark:bg-sky-900 text-sky-700 dark:text-sky-300' : 'hover:bg-gray-100 dark:hover:bg-gray-700'}" %>
        <%= link_to "My Signups", my_needs_needs_path, class: "px-3 py-2 rounded-md text-sm font-medium #{current_page?(my_needs_needs_path) ? 'bg-sky-100 dark:bg-sky-900 text-sky-700 dark:text-sky-300' : 'hover:bg-gray-100 dark:hover:bg-gray-700'}" %>
        
        <% if Current.user.admin? %>
          <%= link_to pending_approval_needs_path, class: "px-3 py-2 rounded-md text-sm font-medium #{current_page?(pending_approval_needs_path) ? 'bg-sky-100 dark:bg-sky-900 text-sky-700 dark:text-sky-300' : 'hover:bg-gray-100 dark:hover:bg-gray-700'} relative" do %>
            Approvals
            <% if pending_approvals_count > 0 %>
              <span class="absolute -top-1 -right-1 inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-white bg-red-600 rounded-full"><%= pending_approvals_count %></span>
            <% end %>
          <% end %>
          <%= link_to "Admin", admin_root_path, class: "px-3 py-2 rounded-md text-sm font-medium #{current_page?(admin_root_path) ? 'bg-sky-100 dark:bg-sky-900 text-sky-700 dark:text-sky-300' : 'hover:bg-gray-100 dark:hover:bg-gray-700'}" %>
        <% end %>
        
        <%= link_to "+ Create", new_need_path, class: "px-4 py-2 bg-sky-600 text-white rounded-md text-sm font-medium hover:bg-sky-700" %>
        
        <!-- Theme Toggle -->
        <button type="button" data-action="click->theme#toggle" class="p-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700" title="Toggle theme">
          <!-- Sun icon for light mode -->
          <svg id="theme-toggle-light-icon" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"></path>
          </svg>
          <!-- Moon icon for dark mode -->
          <svg id="theme-toggle-dark-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20">

<% if object&.errors&.any? %>
  <div class="bg-red-50 dark:bg-red-900 border-l-4 border-red-400 p-4 mb-6 rounded">
    <div class="flex items-start">
      <svg class="w-5 h-5 text-red-400 mr-2 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
      </svg>
      <div>
        <h3 class="text-red-800 dark:text-red-200 font-semibold mb-2">
          <%= pluralize(object.errors.count, "error") %> prohibited this from being saved:
        </h3>
        <ul class="list-disc list-inside text-red-700 dark:text-red-300">
          <% object.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>

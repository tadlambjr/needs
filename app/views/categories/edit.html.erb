<% content_for :title, "Edit Category" %>

<div class="max-w-2xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold">Edit Category</h1>
    <%= link_to "Back", categories_path, class: "text-sky-600 dark:text-sky-400 hover:text-sky-800" %>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
    <%= form_with model: @category, local: true do |f| %>
      <%= render "shared/form_errors", object: @category %>

      <div class="space-y-4">
        <div>
          <%= f.label :category_type, "Type", class: "block text-sm font-medium mb-1" %>
          <%= f.select :category_type,
              options_for_select([
                ['Need Category (Volunteer Opportunities)', 'need'],
                ['Event Category (RSVP Events)', 'event']
              ], @category.category_type),
              {},
              class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700" %>
          <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Need categories are for volunteer opportunities, Event categories are for RSVP events</p>
        </div>

        <div>
          <%= f.label :name, class: "block text-sm font-medium mb-1" %>
          <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700" %>
        </div>

        <div>
          <%= f.label :description, class: "block text-sm font-medium mb-1" %>
          <%= f.text_area :description, rows: 3, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700" %>
        </div>

        <div>
          <%= f.label :color, "Color (optional)", class: "block text-sm font-medium mb-1" %>
          <div class="flex items-center space-x-2">
            <%= f.color_field :color, class: "h-10 w-20 border border-gray-300 dark:border-gray-600 rounded-md" %>
            <span class="text-sm text-gray-500 dark:text-gray-400">Used for visual identification</span>
          </div>
        </div>
      </div>

      <div class="mt-6 flex items-center justify-between">
        <%= link_to "Cancel", categories_path, class: "text-gray-600 dark:text-gray-400 hover:text-gray-800" %>
        <%= f.submit "Update Category", class: "px-6 py-2 bg-sky-600 text-white rounded-md hover:bg-sky-700" %>
      </div>
    <% end %>
  </div>
</div>

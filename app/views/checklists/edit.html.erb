<% content_for :title, "Edit Checklist" %>

<div class="max-w-3xl mx-auto">
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-2xl font-bold">Edit Checklist</h1>
    <%= link_to "Back", checklists_path, class: "text-teal-600 dark:text-teal-400 hover:text-teal-800" %>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4">
    <%= form_with model: @checklist, local: true, id: "checklist-form" do |f| %>
      <%= render "shared/form_errors", object: @checklist %>

      <div class="grid grid-cols-2 gap-4 mb-4">
        <div>
          <%= f.label :name, class: "block text-xs font-medium mb-1" %>
          <%= f.text_field :name, class: "w-full px-2 py-1.5 text-sm border border-gray-300 dark:border-gray-600 rounded dark:bg-gray-700" %>
        </div>

        <div>
          <%= f.label :description, class: "block text-xs font-medium mb-1" %>
          <%= f.text_field :description, class: "w-full px-2 py-1.5 text-sm border border-gray-300 dark:border-gray-600 rounded dark:bg-gray-700" %>
        </div>
      </div>

      <div class="border-t border-gray-200 dark:border-gray-700 pt-3">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-sm font-medium">Items (<span id="item-count"><%= @checklist.checklist_items.count %></span>)</h3>
          <button type="button" id="add-item-btn" class="text-xs px-3 py-1 bg-green-600 text-white rounded hover:bg-green-700">
            + Add Item
          </button>
        </div>
        
        <div id="checklist-items" class="space-y-2">
          <%= f.fields_for :checklist_items do |item_form| %>
            <div class="checklist-item flex items-center gap-2 p-2 border border-gray-200 dark:border-gray-700 rounded">
              <%= item_form.hidden_field :_destroy, class: "destroy-flag" %>
              <svg class="h-4 w-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
              <%= item_form.text_area :description, rows: 1, class: "flex-1 px-2 py-1 text-sm border border-gray-300 dark:border-gray-600 rounded dark:bg-gray-700", placeholder: "Item description" %>
              <button type="button" class="remove-item text-red-600 hover:text-red-800 p-1" title="Remove">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>
          <% end %>
        </div>

        <div id="new-items-container"></div>
      </div>

      <div class="mt-4 flex items-center justify-between">
        <%= link_to "Cancel", checklists_path, class: "text-sm text-gray-600 dark:text-gray-400 hover:text-gray-800" %>
        <%= f.submit "Save Changes", class: "px-4 py-1.5 text-sm bg-teal-600 text-white rounded hover:bg-teal-700" %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  let newItemIndex = <%= @checklist.checklist_items.count %>;
  
  // Add new item
  document.getElementById('add-item-btn').addEventListener('click', function() {
    const container = document.getElementById('new-items-container');
    const timestamp = new Date().getTime();
    const newItem = `
      <div class="checklist-item flex items-center gap-2 p-2 border border-gray-200 dark:border-gray-700 rounded">
        <svg class="h-4 w-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
        <textarea name="checklist[checklist_items_attributes][${timestamp}][description]" rows="1" class="flex-1 px-2 py-1 text-sm border border-gray-300 dark:border-gray-600 rounded dark:bg-gray-700" placeholder="New item description"></textarea>
        <button type="button" class="remove-new-item text-red-600 hover:text-red-800 p-1" title="Remove">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    `;
    container.insertAdjacentHTML('beforeend', newItem);
    updateItemCount();
  });
  
  // Remove existing items
  document.addEventListener('click', function(e) {
    if (e.target.closest('.remove-item')) {
      const item = e.target.closest('.checklist-item');
      const destroyFlag = item.querySelector('.destroy-flag');
      if (destroyFlag) {
        destroyFlag.value = '1';
        item.style.display = 'none';
        updateItemCount();
      }
    }
    
    // Remove new items
    if (e.target.closest('.remove-new-item')) {
      e.target.closest('.checklist-item').remove();
      updateItemCount();
    }
  });
  
  function updateItemCount() {
    const visibleItems = document.querySelectorAll('.checklist-item:not([style*="display: none"])').length;
    document.getElementById('item-count').textContent = visibleItems;
  }
});
</script>

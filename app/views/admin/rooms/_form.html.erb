<%= form_with(model: [:admin, room], class: "space-y-6") do |form| %>
  <% if room.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
      <h3 class="text-red-800 dark:text-red-300 font-semibold mb-2"><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h3>
      <ul class="list-disc list-inside text-red-700 dark:text-red-400">
        <% room.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
    <%= form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 dark:bg-gray-700 dark:text-white", placeholder: "e.g., Fellowship Hall, Sanctuary" %>
  </div>

  <div>
    <%= form.label :location, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
    <%= form.text_field :location, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 dark:bg-gray-700 dark:text-white", placeholder: "e.g., Main Building, 2nd Floor" %>
    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Optional: Specify the location within your church</p>
  </div>

  <div>
    <%= form.label :capacity, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
    <%= form.number_field :capacity, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 dark:bg-gray-700 dark:text-white", placeholder: "Maximum occupancy" %>
    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Optional: Maximum number of people the room can hold</p>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
    <%= form.text_area :description, rows: 4, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-sky-500 dark:bg-gray-700 dark:text-white", placeholder: "Additional details about this room..." %>
  </div>

  <div class="flex items-center">
    <%= form.check_box :active, class: "h-4 w-4 text-sky-600 focus:ring-sky-500 border-gray-300 rounded" %>
    <%= form.label :active, "Active", class: "ml-2 block text-sm text-gray-700 dark:text-gray-300" %>
    <p class="ml-2 text-sm text-gray-500 dark:text-gray-400">(Only active rooms can be booked)</p>
  </div>

  <div class="flex gap-3">
    <%= form.submit class: "px-6 py-2 bg-sky-600 text-white rounded-lg hover:bg-sky-700 transition cursor-pointer" %>
    <%= link_to "Cancel", admin_rooms_path, class: "px-6 py-2 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition" %>
  </div>
<% end %>

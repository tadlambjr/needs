<% content_for :title, "Edit User" %>

<div class="max-w-2xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold">Edit User</h1>
    <%= link_to "Back", admin_users_path, class: "text-indigo-600 dark:text-indigo-400 hover:text-indigo-800" %>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
    <%= form_with model: @user, url: admin_user_path(@user), method: :patch, local: true do |f| %>
      <%= render "shared/form_errors", object: @user %>

      <div class="space-y-4">
        <div>
          <%= f.label :name, class: "block text-sm font-medium mb-1" %>
          <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700" %>
        </div>

        <div>
          <%= f.label :email_address, "Email", class: "block text-sm font-medium mb-1" %>
          <%= f.email_field :email_address, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700" %>
        </div>

        <div>
          <%= f.label :phone, class: "block text-sm font-medium mb-1" %>
          <%= f.telephone_field :phone, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700" %>
        </div>

        <div>
          <%= f.label :role, class: "block text-sm font-medium mb-1" %>
          <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700" %>
        </div>

        <div class="flex items-center">
          <%= f.check_box :active, class: "mr-2 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
          <%= f.label :active, "Active Account", class: "text-sm font-medium" %>
        </div>
      </div>

      <div class="mt-6 flex items-center justify-between">
        <%= link_to "Cancel", admin_users_path, class: "text-gray-600 dark:text-gray-400 hover:text-gray-800" %>
        <%= f.submit "Save Changes", class: "px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" %>
      </div>
    <% end %>
  </div>
</div>

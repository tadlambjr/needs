<% content_for :title, "Edit User" %>

<div class="max-w-2xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold">Edit User</h1>
    <%= link_to "Back", admin_users_path, class: "text-sky-600 dark:text-sky-400 hover:text-sky-800" %>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
    <% if @user.owner? %>
      <div class="mb-4 p-4 bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 rounded-md">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-amber-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-amber-800 dark:text-amber-200">
              Church Owner Account
            </h3>
            <div class="mt-2 text-sm text-amber-700 dark:text-amber-300">
              <p>This user is the church owner and has permanent admin access. The owner role can only be transferred to another admin, not removed.</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    
    <%= form_with model: @user, url: admin_user_path(@user), method: :patch, local: true do |f| %>
      <%= render "shared/form_errors", object: @user %>

      <div class="space-y-4">
        <div>
          <%= f.label :name, class: "block text-sm font-medium mb-1" %>
          <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700" %>
        </div>

        <div>
          <%= f.label :email_address, "Email", class: "block text-sm font-medium mb-1" %>
          <%= f.email_field :email_address, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700" %>
        </div>

        <div>
          <%= f.label :phone, class: "block text-sm font-medium mb-1" %>
          <%= f.telephone_field :phone, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700" %>
        </div>

        <div>
          <%= f.label :role, class: "block text-sm font-medium mb-1" %>
          <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, 
              disabled: @user.owner?,
              class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 #{'opacity-50 cursor-not-allowed' if @user.owner?}" %>
          <% if @user.owner? %>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Church owner must always be an admin. Transfer ownership to change this.</p>
          <% end %>
        </div>

        <div class="flex items-center">
          <%= f.check_box :active, class: "mr-2 h-4 w-4 text-sky-600 border-gray-300 rounded" %>
          <%= f.label :active, "Active Account", class: "text-sm font-medium" %>
        </div>
      </div>

      <div class="mt-6 flex items-center justify-between">
        <%= link_to "Cancel", admin_users_path, class: "text-gray-600 dark:text-gray-400 hover:text-gray-800" %>
        <%= f.submit "Save Changes", class: "px-6 py-2 bg-sky-600 text-white rounded-md hover:bg-sky-700" %>
      </div>
    <% end %>
  </div>
</div>
